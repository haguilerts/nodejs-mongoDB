<%- include("template/cabesera",{titulo:"Pag inicio"}) %>
    <%- include("template/nav") %>
        <h1 class="text-center">juegos </h1>

        <section class="container d-flex flex-wrap">
            <article class="w-100 me-auto">
                <button type="button" class="btn btn-success align-items-end" data-bs-toggle="modal" data-bs-target="#addForm" data-bs-whatever="@mdo">
                    <i class="bi bi-plus-circle"></i> addData
                </button>
            </article>
            <% if(juego.length>0 ){ juego.forEach((j)=>{ %>
                <article class="card m-1" style="width: 18rem;">

                    <img src="<%=j.img%> " class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">

                            <%= j.name %>
                        </h5>
                        <p class="card-text">
                            <%= j.descripcion %>
                        </p>
                        <strong class="card-text"><%= j.presio %></strong>
                    </div>

                </article>
                <%}) } %>
        </section>
        <section>
            <div class="modal fade" id="addForm" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">

                            <h5 class="modal-title text-center w-100" id="exampleModalLabel">
                                a√±adiendo datos
                            </h5>
                            <!-- {{datos |json}} -->
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <form>

                                <div class="mb-3">
                                    <label for="title" class="col-form-label">name:</label>
                                    <input type="text" class="form-control" id="title" name="title">
                                </div>

                                <div class="mb-3">
                                    <label for="message-text" class="col-form-label">Descripcion:</label>
                                    <textarea class="form-control " id="message-text" name="content"></textarea>
                                </div>

                                <div class="mb-3">
                                    <label for="img" class="col-form-label"> Ingrese la Imagen:</label>
                                    <input type="url" class="form-control" id="img" name="imgUrl">

                                </div>
                                <div class="d-flex justify-content-end">

                                    <button type="submit" class="btn btn-secondary p-2 px-4">
                                        <i class="bi bi-arrow-bar-up"></i> Enviar
                                       
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        </body>

        </html>